<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aditya.services.adityagate">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="aditya.services.adityagate.activity_main" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CSEFragment"
            android:label="@string/title_activity_csefragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ITFragment"
            android:label="@string/title_activity_itfragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EEEFragment"
            android:label="@string/title_activity_eeefragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ECEFragment"
            android:label="@string/title_activity_ecefragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CIVILFragment"
            android:label="@string/title_activity_civilfragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MECHFragment"
            android:label="@string/title_activity_mechfragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings" />
        <activity android:name=".MainActivity_initiate">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PDF_Show"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>